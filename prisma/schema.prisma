// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  tier  String  @default("free") // "free" or "paid"
  subscription String? // "x-vanguard" (free), "x-elite", "x-ascended"
  stripeCustomerId String?
  stripeSubscriptionId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resetToken String?
  resetTokenExpiry DateTime?
  generations GenerationUsage[]

  @@map("users")
}

model GenerationUsage {
  id Int @id @default(autoincrement())
  userId Int
  date DateTime
  count Int @default(0)
  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("generation_usage")
}

model SiteVisit {
  id Int @id @default(autoincrement())
  timestamp DateTime @default(now())
  page String?
  
  @@map("site_visits")
}

model GamePopularity {
  id Int @id @default(autoincrement())
  gameName String
  platform String?
  count Int @default(1)
  lastAccessed DateTime @default(now())
  
  @@unique([gameName, platform])
  @@map("game_popularity")
}

model ChatCache {
  id          Int      @id @default(autoincrement())
  promptHash  String   @unique
  prompt      String?
  response    String
  createdAt   DateTime @default(now())
  
  @@map("chat_cache")
}

model CommunityMessage {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@map("community_messages")
}
